# This is the text editor configuration.
# This is supported natively or via plugin by most text editors/IDEs.
# More information: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.html, *.xml, *.svg, *.md}]
indent_size = 4
tab_width = 4
